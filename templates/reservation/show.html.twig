{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
    <h1>Réservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Etudiant</th>
                <td>{{ reservation.etudiant.nom }} {{ reservation.etudiant.prenom }}</td>
            </tr>
            <tr>
                <th>Instructeur</th>
                <td>{{ reservation.instructeurs.email }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ reservation.hours }}</td>
            </tr>
            <tr>
                <th>Date d'examen</th>
                <td>{{ reservation.dateExam ? reservation.dateExam|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ reservation.amount }}</td>
            </tr>
            <tr>
                <th>Status de Paiement</th>
                <td>
                    {{ reservation.transactionState|default('Nom Payer') }}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">Retour à la liste</a>
    <br>
    <br>
    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
