{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    <h1 class="mb-3">
		Authentification
	</h1>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">

        <div class="mb-3">
            <div class="row">
                <div class="col-2">
                    <label for="name" class="form-label">Email:</label>
                </div>
                <div class="col-3">
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
                </div>
            </div>
        </div>
        <div class="mb-3">
            <div class="row">
                <div class="col-2">
                    <label for="name" class="form-label">Mot de passe:</label>
                </div>
                <div class="col-3">
                    <input type="password" id="password" class="form-control" name="_password">
                </div>
            </div>
        </div>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="btn btn-success" >Login</button><br><br>
        <a href="{{ path('app_forgot_password_request')}}">Mot de passe oubli√©</a>
        |
        <a href="{{ path('app_register')}}">Inscription</a>
    </form>
{% endblock %}