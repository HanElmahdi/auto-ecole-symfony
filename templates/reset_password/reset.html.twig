{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <h1 class="mb-3">Réinitialisez votre mot de passe</h1>

    {{ form_start(resetForm) }}
        <div class="mb-3">
            <div class="row">
                <div class="col-2">
                    <label for="name" class="form-label">{{ form_label(resetForm.plainPassword) }}</label>
                </div>
                <div class="col-3">
                    {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <button class="btn btn-primary">Réinitialiser le mot de passe</button>
    {{ form_end(resetForm) }}
{% endblock %}
